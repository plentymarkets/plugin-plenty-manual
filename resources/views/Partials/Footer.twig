            </div>
            <div class="col-sm text-right">
                <a class="footer-link" href="{{ trans("PlentyManual::Links.termsAndConditions") }}">{{ trans("PlentyManual::Manual.termsAndConditions") }}</a>
                |
                <a class="footer-link" href="{{ trans("PlentyManual::Links.privacyPolicy") }}">{{ trans("PlentyManual::Manual.privacyPolicy") }}</a>
                |
                <a class="footer-link" href="{{ trans("PlentyManual::Links.legalDisclosure") }}">{{ trans("PlentyManual::Manual.legalDisclosure") }}</a>
            </div>
        </div>

    </div>

</footer>

<div class="to-top-wrapper" data-fn="to-top-wrapper">
    <a class="btn btn-secondary btn-only-icon" href="#top" data-fn-options="{ preventDefault: true }">
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
        <span class="sr-only">{{ trans("PlentyManual::Manual.toTop") }}</span>
    </a>
</div>
