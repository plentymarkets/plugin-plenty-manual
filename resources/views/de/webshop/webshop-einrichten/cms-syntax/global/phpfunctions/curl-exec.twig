	curl_setopt( $_ch , "CURLOPT_RETURNTRANSFER" , 1 );
	curl_setopt( $_ch , "CURLOPT_URL" , $_apiUrl);

	# Runs Curl session and stores result
	$_output = curl_exec($_ch);

	# Closes Curl session
	curl_close($_ch);

