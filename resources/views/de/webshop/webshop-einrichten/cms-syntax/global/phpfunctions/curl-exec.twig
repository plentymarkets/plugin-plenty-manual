	$_apiUrl = "https://api.shopvote.de/ratings/v1/"
			   . $_apiFunction . "/"
			   . $_svStoreID . "/"
			   . $_apiKey;

	# Initializes Curl session
	$_ch = curl_init();

	# Prepares Useragent options as strings
	$_opt = "SVApiV1; L25ext for ShopID ";
